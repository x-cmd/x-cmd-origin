# shellcheck shell=bash
x log init advise
x ws install

# Section: Testcase for different awk
cross_env_test() {
    for i in debian centos ; do
        advise_log info "Testing : " "$i"
        # docker run -it -v  ~/.x-cmd/:/root/.x-cmd/ -v "$(pwd)":/pd "xcmd/${i}" bash -c ". ~/.x-cmd/xrc/latest && cd pd && . ./testcase/v0_test_awk"
        docker run -it -v "$(pwd)":/pd "xcmd/${i}-dev" bash -i -c "cd pd && . ./.x-cmd/testcase/v0_test_awk"
    done

    for i in 3 4 5 ; do
        advise_log info "Testing : " "bash${i}"
        docker run -it -v "$(pwd)":/pd "xcmd/bash${i}-dev" bash -i -c "cd pd && . ./.x-cmd/testcase/v0_test_awk"
    done
}

dbash() {
    docker run -it -v "$(pwd)":/pd "xcmd/bash${1}-dev" \
        bash -i -c "cd pd && bash"
}

# EndSection

. ./.x-cmd/testcase/v0_test_awk

printf "You can test cross awk env use: \n  cross_env_test\n"
printf "You can test cross bash env use: \n"

for i in 3 4 5 ; do
    printf "  dbash %s\n" "$i"
done
printf "\n"

