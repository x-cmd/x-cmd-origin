item(){
    local id=${1:?ID}
    local comment="${2:?comment}"
    local tag="${3:-enhancement}"

    printf "$(ui bold green)%s $(ui white bold)%s$(ui normal dim)  (%s)$(ui end)\n"    "$id"   "$comment"  "$tag"
}

